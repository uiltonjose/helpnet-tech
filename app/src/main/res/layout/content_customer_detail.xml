<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
            style="@style/CardViewItem"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

        <LinearLayout style="@style/CardViewContainer"
                      android:orientation="vertical">
            <TextView
                    style="@style/TextTitleDetail"
                    android:drawableStart="@drawable/ic_user_face"
                    android:drawablePadding="12dp"
                    android:text="@string/customer_data_label"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_marginTop="10dp"
                  android:background="@color/separator_color"/>

            <TextView
                    android:id="@+id/customerIDTextView"
                    style="@style/TextDetail"
                    tools:text="CPF do cliente: 169.654.5456-45"/>

            <TextView
                    android:id="@+id/customerNameTextView"
                    style="@style/TextDetail"
                    tools:text="Nome do cliente: José Oliveira"/>

            <TextView
                    android:id="@+id/referenceDescriptionTextView"
                    style="@style/TextDetail"
                    tools:text="Referência: GABRIEL DE IVONETE"/>

            <TextView
                    android:id="@+id/phoneTextView"
                    style="@style/TextDetail"
                    tools:text="Telefone: (81) 3498-6813"/>

            <TextView
                    android:id="@+id/cellphoneTextView"
                    style="@style/TextDetail"
                    tools:text="Celular: (81) 9.8756-9812"/>

            <TextView
                    android:id="@+id/planDetailTextView"
                    style="@style/TextDetail"
                    tools:text="Plano: 8_MB"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            style="@style/CardViewItem"
            app:cardCornerRadius="4dp"
            app:cardUseCompatPadding="true">

        <LinearLayout style="@style/CardViewContainer"
                      android:orientation="vertical">
            <TextView
                    style="@style/TextTitleDetail"
                    android:drawableStart="@drawable/ic_home"
                    android:drawablePadding="12dp"
                    android:text="@string/address_label"/>

            <View android:layout_width="match_parent" android:layout_height="1dp"
                  android:layout_marginTop="10dp"
                  android:background="@color/separator_color"/>

            <TextView
                    android:id="@+id/addressTextView"
                    style="@style/TextDetail"
                    tools:text="Endereço: Rua Estrada da Luz."/>

            <TextView
                    android:id="@+id/addressNumberTextView"
                    style="@style/TextDetail"
                    tools:text="Número: 14"/>

            <TextView
                    android:id="@+id/neighborTextView"
                    style="@style/TextDetail"
                    tools:text="Bairro: Santo Aleixo"/>

            <TextView
                    android:id="@+id/cityTextView"
                    style="@style/TextDetail"
                    tools:text="Cidade: Jaboatão"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>